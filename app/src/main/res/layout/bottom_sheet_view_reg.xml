<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheets_view_register"
    android:background="@drawable/bg_layout_login_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <View
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/base"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:maxHeight="600dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="28dp"
                android:text="Đăng ký"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:textColorHint="@color/color_basic_1"
                />
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgAvatarSource"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:id="@+id/txtOpenImageSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Avatar"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edName_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="@color/color_basic_1"
                android:drawableLeft="@drawable/ic_account"
                android:drawablePadding="10dp"
                android:fontFamily=""
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:shadowColor="@color/color_basic_2"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edEmail_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="@color/color_basic_1"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:fontFamily=""
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:shadowColor="@color/color_basic_2"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edPhoneNumber_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="@color/color_basic_1"
                android:drawableLeft="@drawable/ic_local_phone"
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:inputType="textPhonetic"
                android:shadowColor="@color/color_basic_2"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edPassword_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:shadowColor="@color/color_basic_2"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_pass"
                android:backgroundTint="@color/color_basic_1"
                android:fontFamily=""/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sign_up_push"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_login_btn_basic"
            android:shadowRadius="5"
            android:textColor="@color/white"
            android:text="Đăng ký"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>