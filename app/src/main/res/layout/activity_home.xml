<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/nav_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_nav"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgNewsLayout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_news_icon"
                android:backgroundTint="@color/color_basic_1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgOrderLayout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_order_icon"
                android:backgroundTint="@color/color_basic_4"/>
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Order"-->
<!--                android:visibility="gone"-->
<!--                android:textColor="@color/color_basic_1"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgStoreLayout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_store_icon"
                android:backgroundTint="@color/color_basic_4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgAccountLayout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_account_icon"
                android:backgroundTint="@color/color_basic_4"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>