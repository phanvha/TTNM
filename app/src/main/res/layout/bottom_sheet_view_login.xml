<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheets_view_login"
    android:background="@drawable/bg_layout_login_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <View
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/base"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:maxHeight="500dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="28dp"
                android:text="Đăng nhập"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:textColorHint="@color/color_basic_1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:shadowColor="@color/color_basic_2"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_email"
                android:backgroundTint="@color/color_basic_1"
                android:fontFamily=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:shadowColor="@color/color_basic_2"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_pass"
                android:backgroundTint="@color/color_basic_1"
                android:fontFamily=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_sign_in_push"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bg_login_btn_basic"
            android:shadowRadius="5"
            android:textColor="@color/white"
            android:text="Đăng nhập"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_above="@+id/btn_sign_up"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="hoặc"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgGoogleLogin"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/google"/>
            <ImageView
                android:id="@+id/imgFacebookLogin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/facebook"/>


        </LinearLayout>



    </LinearLayout>




</LinearLayout>