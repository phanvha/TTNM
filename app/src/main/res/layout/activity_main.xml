<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fmContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav"/>

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/initWhite"
        android:layout_alignParentBottom="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_nav_home"
            android:layout_weight="2.5"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imbtnHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/news"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Home"
                android:textColor="@color/orange_xd"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_nav_order"
            android:layout_weight="2.5"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imbtnOrder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/order"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Home"
                android:textColor="@color/orange_xd"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_nav_store"
            android:layout_weight="2.5"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imbtnShop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Home"
                android:textColor="@color/orange_xd"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_nav_account"
            android:layout_weight="2.5"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imbtnAccount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_user"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Home"
                android:textColor="@color/orange_xd"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>