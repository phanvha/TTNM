<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moonlight.MainActivity">

    <fragment
        android:id="@+id/fmContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav"/>
    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/initWhite"
        android:layout_alignParentBottom="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_nav_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imbtHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/news"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Home"
                android:textColor="@color/orange_xd"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_nav_order"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="2.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imbtOrder"
                android:background="@drawable/order"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Order"
                android:textColor="@color/orange_xd"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_nav_store"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="2.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imbtShop"
                android:background="@drawable/shop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Shop"
                android:textColor="@color/orange_xd"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_nav_account"
            android:layout_weight="2.5"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imbtnAccount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_user"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="User"
                android:textColor="@color/orange_xd"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>